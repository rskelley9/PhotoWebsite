%li{ :id => "photo_#{photo.id}"}
  .title
    %span.caption= truncate(photo.name, :length => 20)
    = link_to(image_tag('cancel.png'), admin_photo_path(photo), :method => :delete, :remote => true, :class => 'delete')
  = raw "#{link_to(image_tag(photo.photo.thumb('150x100#').url, :size => '150x100'), photo.photo.url, :title => photo.name, :rel => 'lightbox')}"

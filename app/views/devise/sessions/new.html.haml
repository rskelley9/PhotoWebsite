- content_for :title, 'Photographer Sign In'
- content_for :sidebar do
  %p Please sign in using you email address and password.
  %p Checking the "Remember me" box will tell your browser to log you in automatically in the future.

= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-horizontal' }) do |f|
  = f.input :email, :required => false, :autofocus => true, :hint => 'Enter your email address.'
  = f.input :password, :required => false, :hint => 'Enter your password.'
  = f.input :remember_me, :as => :boolean, :hint => '&nbsp;Keeps you signed in.'.html_safe if devise_mapping.rememberable?

  .form-actions
    = f.button :submit, 'Sign in', :class => 'btn-primary'
    %p
    %p= render :partial => 'devise/shared/links'
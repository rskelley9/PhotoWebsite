<% content_for :title, @gallery.name %>
<% if @gallery.body %>
  <div class="gallery-body">
    <%= @gallery.body.to_html.html_safe %>
    <br/>
  </div>
<% end %>
<ul class="thumbnails">
  <% @gallery.photos.each do |photo| %>
    <li class="span3">
      <%= link_to(image_tag(photo.photo.thumb('260x173!').url, :size => '260x173', :alt => photo.name), photo.photo.url, :class => "thumbnail", :rel => 'lightbox') %>
    </li>
  <% end %>
</ul>

<div id="links">
  <% @gallery.photos.each do |photo| %>
 <%= link_to(image_tag(photo.photo.thumb('260x173!').url, :size => '260x173', :alt => photo.photo.name), photo.photo.url, :rel => 'lightbox', 'data-gallery' => '') %>

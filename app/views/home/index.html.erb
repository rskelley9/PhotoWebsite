 <div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <ul class="nav">
        <li class="dropdown">
          <a data-toggle="dropdown" class="dropdown-toggle" href="#">Photo Galleries<b class="caret"></b></a>
          <ul class="dropdown-menu">
            <% galleries.each do |gallery| %>
            <li class=<%= (defined?(@gallery) and @gallery.id == gallery.id ? 'active' : '')%>> <%=link_to(gallery.name,gallery_url(gallery)) %>
            </li>
            <% end %>
          </ul>
        </li>
        <% pages.each do |page| %>
        <li class=<%= (defined?(@page) and @page.id == page.id ? 'active' : '')%>> <%= link_to(page.name, page_url(page)) %>
        </li>
        <% end %>
        <li class=<%= controller.controller_name == 'posts' ? 'active' : '' %>> <%= link_to('Blog', photographer.blog_url.blank? ? posts_url : photographer.blog_url) %>
        </li>
        <li class="divider-vertical"></li>
        <li class=<%= controller.controller_name == 'contact_requests' ? 'active' : '' %>> <%= link_to('Contact', new_contact_request_url) %>
        </li>
      </ul>
      <div class="pull-right">
        <%= link_to(photographer.name, root_url, :class => 'brand') %>
      </div>
    </div>
  </div>
</div>


<div class="jumbotron masthead">
  <div class="inner front-heading">
    <h1>
      <%= photographer.name %>
    </h1>
    <p>
      <%= photographer.tagline %>
    </p>
  </div>
</div>
<div class="row">
  <div class="span12">
    <div class="carousel" id="carousel">
      <div class="carousel-inner">
        <% galleries.each_with_index do |gallery, idx| %>
        <div class="item<%= ' active' if idx == 0 %>">
          <%= link_to( image_tag(gallery.cover.thumb('940x500!').url), gallery_url(gallery) ) %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="marketing">
  <% galleries.each_slice(3) do |galleries| %>
  <div class="row">
    <% galleries.each do |gallery| %>
    <div class="span4">
      <h2>
        <%= link_to(gallery.name, gallery_path(gallery), :class => 'marketing-link') %>
      </h2>
      <p>
        <%= gallery.description %>
      </p>
      <p>
        <%= link_to('View this gallery &raquo;'.html_safe, gallery_url(gallery), :class => 'btn') %>
      </p>
    </div>
    <% end %>
  </div>
  <% end %>
</div>
